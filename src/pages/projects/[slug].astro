---
import Layout from "@/layouts/Layout.astro";
import MarkdownLayout from "@/layouts/MarkdownLayout.astro";
import { Image } from "astro:assets";
import { getCollection, render } from "astro:content";
import slugify from "slugify";

export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((project) => ({
    params: { slug: slugify(project.data.title, { lower: true, strict: true }) },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await render(project);
const { 
  title, 
  date, 
  cover, 
  description, 
  techStack, 
  maintainers, 
  status, 
  category, 
  tags = [], 
  github, 
  demo, 
  documentation 
} = project.data;

const formattedDate = new Date(date).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});

const statusColors: Record<string, string> = {
  active: "bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400",
  maintained: "bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400",
  archived: "bg-gray-100 text-gray-800 dark:bg-gray-900/30 dark:text-gray-400",
  completed: "bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400",
  "in-progress": "bg-orange-100 text-orange-800 dark:bg-orange-900/30 dark:text-orange-400",
};
---

<Layout>
  <main class="mx-auto max-w-4xl space-y-10 px-4 py-20">
    <!-- Project Header -->
    <div class="space-y-6">
      <!-- Category and Status -->
      <div class="flex flex-wrap items-center gap-3">
        <span class="text-primary text-sm font-medium">{category}</span>
        <span class={`px-3 py-1 text-xs font-medium rounded-full ${statusColors[status]}`}>
          {status}
        </span>
      </div>

      <h1 class="text-4xl font-bold">{title}</h1>
      <p class="text-muted-foreground text-lg">{description}</p>

      <!-- Tech Stack Tags -->
      <div class="flex flex-wrap gap-2">
        {techStack.map((tech) => (
          <span class="px-3 py-1 text-sm bg-muted text-muted-foreground rounded-md">
            {tech}
          </span>
        ))}
        {tags.map((tag) => (
          <span class="px-3 py-1 text-sm bg-primary/10 text-primary rounded-md">
            {tag}
          </span>
        ))}
      </div>

      <!-- Links -->
      <div class="flex flex-wrap items-center gap-4">
        {github && (
          <a
            href={github}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 text-sm font-medium text-muted-foreground hover:text-primary transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
            </svg>
            GitHub Repository
          </a>
        )}
        {demo && (
          <a
            href={demo}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 text-sm font-medium text-muted-foreground hover:text-primary transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
            Live Demo
          </a>
        )}
        {documentation && (
          <a
            href={documentation}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 text-sm font-medium text-muted-foreground hover:text-primary transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            Documentation
          </a>
        )}
      </div>

      <!-- Maintainers -->
      <div class="flex items-center gap-4 pt-4 border-t border-border">
        <span class="text-sm font-medium">Maintainers:</span>
        <div class="flex flex-wrap items-center gap-3">
          {maintainers.map((maintainer) => (
            <a
              href={`https://github.com/${maintainer}`}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-2 group"
            >
              <img
                src={`https://github.com/${maintainer}.png`}
                alt={maintainer}
                class="w-8 h-8 rounded-full border-2 border-card"
                onerror="this.onerror=null; this.src='/github_avatar.svg';"
              />
              <span class="text-sm text-muted-foreground group-hover:text-primary transition-colors">
                @{maintainer}
              </span>
            </a>
          ))}
        </div>
      </div>

      <p class="text-sm text-muted-foreground">Last updated: {formattedDate}</p>

      <div class="border-primary my-8 w-20 rounded-2xl border-4 border-b"></div>

      <!-- Project Cover -->
      {
        cover && (
          <Image
            src={cover}
            alt={title}
            class="h-auto w-full rounded-xl object-cover shadow-md"
            loading={"eager"}
            format="webp"
            quality={80}
          />
        )
      }
    </div>

    <!-- Project Markdown Content -->
    <MarkdownLayout>
      <Content />
    </MarkdownLayout>

    <!-- Back to Projects Link -->
    <div class="pt-8 border-t border-border">
      <a
        href="/projects"
        class="inline-flex items-center gap-2 text-primary hover:underline"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to all projects
      </a>
    </div>
  </main>
</Layout>
