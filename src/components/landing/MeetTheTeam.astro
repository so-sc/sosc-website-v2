<!-- No script needed for this CSS-only approach! -->

<style>
  /* 
    LAYOUT CONFIGURATION 
    Adjust these variables to control spacing and sizing 
  */
  :root {
    --row-height: 150px; /* Approximate minimum height */
    --name-indent: 26vw; /* Dynamic padding for name column to ensure scaling */
    
    /* Dynamic Image Dimensions */
    --image-width: 25vw;
    --image-height: 32vw;
    
    --tag-spacing: 24px; /* Space between tags and left edge/other elements */
    --name-spacing: 24px; /* Space between name and right edge */
  }

  .team-section {
    background-color: #ffffff;
    min-height: 100vh;
  }

  .section-title {
    font-size: 4rem;
    margin-bottom: 40px;
    font-weight: 500;
  }

  .team-list {
    border-top: none;
  }

  .team-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #000;
    cursor: default;
    position: relative;
    min-height: 100px; 
  }

  /* TAG FILL EFFECT */
  .tag-pill {
    padding: 4px 15px;
    border: 1px solid #000;
    border-radius: 6px;
    font-size: 0.85rem;
    position: relative;
    overflow: hidden;
    background-color: #fff;
    transition: background-color 0.25s ease, color 0.25s ease, border-color 0.25s ease;
    color: #000;
  }

  .team-item:hover .tag-pill {
    background-color: #ff5046;
    color: #fff;
    border-color: #ff5046;
  }

  /* TAGS (Left Side) */
  .tags-column {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    flex: 1; /* Takes up available space on left */
    z-index: 2; /* Keeps text above image */
    padding-right: var(--tag-spacing);
  }

  /* NAME (Right Side) */
  .name-column {
    flex: 1; /* Takes up available space on right */
    text-align: left; /* Aligns names to the start of the column */
    padding-left: var(--name-indent); /* Dynamic Indent */
    z-index: 2; /* Keeps text above image */
  }

  .member-name {
    font-size: 1.25rem;
    font-weight: 400;
  }

  @media (min-width: 768px) {
    .member-name {
      font-size: 2rem;
    }
  }

  /* 
    CENTERED IMAGE 
    Appears only on hover 
  */
  .row-image-container {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    
    width: var(--image-width);
    height: var(--image-height);
    pointer-events: none; 
    z-index: 1;
    opacity: 0;
    display: none; 
  }
  
  .team-item:hover .row-image-container {
    opacity: 1;
    display: block;
  }

  .row-image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
    box-shadow: 0 10px 25px rgba(0,0,0,0.15);
  }

  @media (max-width: 768px) {
    .team-item { flex-direction: column-reverse; align-items: flex-start; gap: 10px; }
    .name-column { text-align: left; padding-left: 0; }
    .row-image-container { display: none !important; }
  }
</style>