<!-- No script needed for this CSS-only approach! -->

<style>
  /* 
    LAYOUT CONFIGURATION 
    Adjust these variables to control spacing and sizing 
  */
  :root {
    --row-height: 150px;
    --name-indent: 26vw;

    /* Dynamic Image Dimensions */
    --image-width: 25vw;
    --image-height: 32vw;

    --tag-spacing: 24px;
    --name-spacing: 24px;
  }

  .team-section {
    background-color: #ffffff;
    min-height: 100vh;
  }

  .section-title {
    font-size: 4rem;
    margin-bottom: 40px;
    font-weight: 500;
  }

  .team-list {
    border-top: none;
  }

  .team-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #000;
    cursor: default;
    position: relative;
    min-height: 100px;
  }

  .tags-column {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    flex: 1.2;
    z-index: 2;
    padding-right: var(--tag-spacing);
  }

  .member-tag {
    padding: 3px 12px;
    border: 1px solid var(--primary);
    border-radius: 0; /* Sharp corners */
    font-size: 0.75rem;
    font-family:
      ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono",
      "Courier New", monospace;
    color: #000;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    background-color: transparent;
    transition: all 0.25s ease;
    font-weight: bold;
  }

  .team-item:hover .member-tag {
    background-color: var(--primary);
    color: #fff;
  }

  .name-column {
    flex: 1;
    text-align: left;
    padding-left: var(--name-indent);
    z-index: 2;
  }

  .member-name {
    font-size: 1.25rem;
    font-weight: 400;
  }

  @media (min-width: 768px) {
    .member-name {
      font-size: 2rem;
    }
  }

  /* 
    CENTERED IMAGE 
    Appears only on hover 
  */
  .row-image-container {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);

    width: var(--image-width);
    height: var(--image-height);
    pointer-events: none;
    z-index: 1;
    opacity: 0;
    display: none;
  }

  .team-item:hover .row-image-container {
    opacity: 1;
    display: block;
  }

  .row-image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
  }

  @media (max-width: 768px) {
    .team-item {
      display: grid;
      grid-template-columns: 80px 1fr;
      grid-template-areas:
        "image name"
        "image tags";
      align-items: center;
      gap: 12px 16px;
      padding: 16px 0 !important;
    }

    .row-image-container {
      grid-area: image;
      position: relative;
      left: 0;
      top: 0;
      transform: none;
      width: 80px;
      height: 100px;
      display: block !important;
      opacity: 1;
      pointer-events: auto;
    }

    .name-column {
      grid-area: name;
      padding-left: 0;
      z-index: 2;
    }

    .tags-column {
      grid-area: tags;
      padding-right: 0;
      justify-content: flex-start;
      gap: 6px;
    }

    .member-tag {
      padding: 1px 8px;
      font-size: 0.65rem;
    }
  }
</style>
