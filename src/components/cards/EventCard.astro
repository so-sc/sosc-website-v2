---
import { Image } from "astro:assets";

const { name, date, location, cover, link } = Astro.props;
const formattedDate = new Date(date).toLocaleDateString("en-US", {
  year: "numeric",
  month: "short",
  day: "numeric",
});
---

<a
  href={`/events/${link}`}
  class="group overflow-hidden rounded-lg cursor-pointer transition-transform duration-300 hover:scale-[1.02] block break-inside-avoid mb-4 bg-card shadow-md hover:shadow-lg"
>
  <!-- Image without overlay -->
  <div class="relative">
    {
      cover && (
        <Image
          src={cover}
          alt={name}
          class="w-full h-auto object-contain bg-gray-100"
          format="webp"
          loading="lazy"
          quality={80}
        />
      )
    }
  </div>

  <!-- Text section below image -->
  <div class="p-4 space-y-2">
    <!-- Date and location -->
    <div class="flex items-center gap-2 text-sm text-muted-foreground">
      <span>{formattedDate}</span>
      {location && (
        <>
          <span>â€¢</span>
          <span>{location}</span>
        </>
      )}
    </div>

    <!-- Event name -->
    <h2 class="text-xl font-bold leading-tight transition-colors group-hover:text-primary">
      {name}
    </h2>
  </div>
</a>
