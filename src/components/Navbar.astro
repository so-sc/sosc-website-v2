---
import { Menu, X } from "lucide-react";
import { Image } from "astro:assets";
import SOSC from "@/assets/sosc_logo.svg";
---

<nav class="text-foreground fixed top-0 z-[99] w-full" id="main-navbar">
  <div class="flex h-14 w-full items-center justify-between px-4 md:px-8">
    <div
      class="relative z-50 text-xl font-bold transition-opacity duration-300"
      id="nav-logo"
    >
      <a href="/" aria-label="Go to home">
        <Image src={SOSC} alt="SOSC Logo" class="h-6 w-fit" loading="eager" />
      </a>
    </div>
    <!-- Fixed Toggle Button -->
    <button
      id="menu-toggle"
      class="relative z-[100] cursor-pointer"
      aria-label="Toggle menu"
    >
      <Menu
        id="menu-icon"
        className="block h-6 w-6 transition-transform duration-300"
      />
      <X
        id="close-icon"
        className="hidden h-6 w-6 transition-transform duration-300"
      />
    </button>
  </div>

  <!-- Full-page dropdown menu -->
  <div id="fullpage-menu" class="fullpage-menu">
    <div class="menu-background"></div>

    <!-- Top Section: Tech text ONLY (Close button removed) -->
    <div class="menu-top">
      <div class="tech-text">
        <span class="tech-label">OPEN SOURCE</span>
        <span class="tech-separator">/</span>
        <span class="tech-label">INNOVATION</span>
        <span class="tech-separator">/</span>
        <span class="tech-label">COLLABORATION</span>
      </div>
    </div>

    <!-- Middle Section: Horizontal Infinite Scroll -->
    <!-- Middle Section: Horizontal Infinite Scroll -->
    <div class="menu-middle">
      <div class="embla" id="embla-node">
        <div class="embla__container">
          <div class="embla__slide">
            <a href="/blogs" class="horizontal-link" data-index="1">
              <span class="link-number">01</span>
              <span class="link-text">BLOGS</span>
            </a>
          </div>
          <div class="embla__slide">
            <a href="/events" class="horizontal-link" data-index="2">
              <span class="link-number">02</span>
              <span class="link-text">EVENTS</span>
            </a>
          </div>
          <div class="embla__slide">
            <a href="/guidelines" class="horizontal-link" data-index="3">
              <span class="link-number">03</span>
              <span class="link-text">GUIDELINES</span>
            </a>
          </div>
          <div class="embla__slide">
            <a href="/team" class="horizontal-link" data-index="4">
              <span class="link-number">04</span>
              <span class="link-text">TEAM</span>
            </a>
          </div>
          <div class="embla__slide">
            <a href="/resources" class="horizontal-link" data-index="5">
              <span class="link-number">05</span>
              <span class="link-text">RESOURCES</span>
            </a>
          </div>
          <div class="embla__slide">
            <a href="/projects" class="horizontal-link" data-index="6">
              <span class="link-number">06</span>
              <span class="link-text">PROJECTS</span>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Section: SOSC ideals -->
    <div class="menu-bottom">
      <p class="ideals-text text-justify font-mono">
        At Sahyadri Open-Source Community, we believe in breeding innovation
        through collaboration, empowering students with cutting-edge technology,
        and building a vibrant ecosystem where ideas transform into impactful
        solutions. We champion open-source principles, encourage knowledge
        sharing, and create opportunities for growth through workshops,
        hackathons, and community-driven projects.
      </p>
    </div>
  </div>
</nav>

<style>
  .fullpage-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: rgba(0, 0, 0, 0.98);
    backdrop-filter: blur(10px);
    transform: translateY(-100%);
    transition: transform 0.8s cubic-bezier(0.77, 0, 0.175, 1);
    z-index: 60;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .fullpage-menu.active {
    transform: translateY(0);
  }

  .menu-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("/navbar-bg.png");
    background-size: cover;
    background-position: center;
    filter: grayscale(100%) contrast(1.2);
    opacity: 0.15;
    z-index: 0;
  }

  /* Top Section */
  .menu-top {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 4rem 3rem 2rem;
    position: relative;
    z-index: 10;
    opacity: 0;
    transform: translateY(-20px);
    transition: all 0.6s cubic-bezier(0.77, 0, 0.175, 1);
  }

  .fullpage-menu.active .menu-top {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.1s;
  }

  .tech-text {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }

  .tech-label {
    font-size: clamp(0.75rem, 1.5vw, 1rem);
    font-weight: 500;
    letter-spacing: 0.15em;
    color: rgba(255, 255, 255, 0.8);
    text-transform: uppercase;
  }

  .tech-separator {
    color: rgba(255, 255, 255, 0.4);
    font-size: clamp(0.75rem, 1.5vw, 1rem);
  }

  /* Middle Section */
  .menu-middle {
    flex: 1;
    display: flex;
    align-items: center;
    position: relative;
    z-index: 10;
    width: 100%;
    overflow: hidden;
    cursor: grab;
  }

  .menu-middle:active {
    cursor: grabbing;
  }

  /* Embla Carousel */
  .embla {
    overflow: hidden;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
  }
  .embla__container {
    display: flex;
    width: 100%;
    height: 100%;
    touch-action: pan-y pinch-zoom;
  }
  .embla__slide {
    flex: 0 0 85%;
    min-width: 0;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .horizontal-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    gap: 1rem;
    text-decoration: none;
    white-space: nowrap;
    opacity: 0;
    transform: translateY(30px);
    transition:
      opacity 0.5s ease,
      transform 0.5s ease;
    position: relative;
    cursor: pointer;
    user-select: none;
    -webkit-user-drag: none;
  }
  .fullpage-menu.active .horizontal-link {
    opacity: 1;
    transform: translateY(0);
  }

  /* Stagger animations for first visible set generally */
  /* Stagger animations for set */
  .fullpage-menu.active .embla__slide:nth-child(1) .horizontal-link {
    transition-delay: 0.1s;
  }
  .fullpage-menu.active .embla__slide:nth-child(2) .horizontal-link {
    transition-delay: 0.2s;
  }
  .fullpage-menu.active .embla__slide:nth-child(3) .horizontal-link {
    transition-delay: 0.3s;
  }
  .fullpage-menu.active .embla__slide:nth-child(4) .horizontal-link {
    transition-delay: 0.4s;
  }

  .link-number {
    font-size: clamp(1.5rem, 3vw, 2.5rem);
    color: rgba(255, 255, 255, 0.4);
    font-weight: 300;
    transition: color 0.3s ease;
  }

  .link-text {
    font-size: clamp(3rem, 10vw, 8rem);
    font-weight: 700;
    color: white;
    letter-spacing: 0.05em;
    transition: transform 0.3s cubic-bezier(0.77, 0, 0.175, 1);
    position: relative;
  }

  .link-text::after {
    content: "";
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 0;
    height: 4px;
    background: linear-gradient(90deg, #00ff88, #00ccff);
    transition: width 0.5s cubic-bezier(0.77, 0, 0.175, 1);
  }

  .horizontal-link:hover .link-number {
    color: rgba(255, 255, 255, 0.8);
  }

  .horizontal-link:hover .link-text {
    transform: translateX(10px);
  }

  .horizontal-link:hover .link-text::after {
    width: 100%;
  }

  /* Bottom Section */
  .menu-bottom {
    padding: 2rem 3rem 3rem;
    position: relative;
    z-index: 10;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.6s cubic-bezier(0.77, 0, 0.175, 1);
  }

  .fullpage-menu.active .menu-bottom {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.6s;
  }

  .ideals-text {
    font-size: clamp(0.75rem, 1.2vw, 1rem);
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.7);
    max-width: 100%;
    margin: 0;
    letter-spacing: 0.05em;
  }

  @media (max-width: 1024px) {
    .menu-top,
    .menu-bottom {
      padding: 2rem;
    }
    .scroll-set {
      gap: 0;
      padding-right: 0;
    }
  }

  @media (max-width: 768px) {
    .menu-top,
    .menu-bottom {
      padding: 1.5rem;
    }
    .tech-text {
      gap: 0.5rem;
    }
    .scroll-set {
      gap: 0;
      padding-right: 0;
    }
    .link-text {
      font-size: clamp(2rem, 8vw, 6rem);
    }
  }

  @media (max-width: 480px) {
    .menu-top,
    .menu-bottom {
      padding: 1rem;
    }
    .tech-label {
      font-size: 0.625rem;
    }
    .scroll-set {
      gap: 0;
      padding-right: 0;
    }
    .link-text {
      font-size: 3rem;
    }
  }
</style>

<script>
  import EmblaCarousel from "embla-carousel";

  function initNavbar() {
    const navbar = document.getElementById("main-navbar");
    const menuToggle = document.getElementById("menu-toggle");
    const menuIcon = document.getElementById("menu-icon");
    const closeIcon = document.getElementById("close-icon");
    const fullpageMenu = document.getElementById("fullpage-menu");
    const emblaNode = document.getElementById("embla-node");
    const horizontalLinks = document.querySelectorAll(".horizontal-link");

    if (
      !navbar ||
      !menuToggle ||
      !fullpageMenu ||
      !emblaNode ||
      !menuIcon ||
      !closeIcon
    )
      return;

    // Initialize Embla
    const emblaApi = EmblaCarousel(emblaNode, {
      loop: true,
      align: "center",
      dragFree: false,
    });

    let isMenuOpen = false;

    function openMenu() {
      isMenuOpen = true;
      fullpageMenu?.classList.add("active");
      menuIcon?.classList.add("hidden");
      closeIcon?.classList.remove("hidden");
      document.body.style.overflow = "hidden";
      // Re-init or resize embla if needed, usually auto-handles
      emblaApi.reInit();
    }

    function closeMenu() {
      isMenuOpen = false;
      fullpageMenu?.classList.remove("active");
      menuIcon?.classList.remove("hidden");
      closeIcon?.classList.add("hidden");
      document.body.style.overflow = "";
    }

    // Toggle click
    menuToggle.onclick = () => {
      isMenuOpen ? closeMenu() : openMenu();
    };

    // Link click (Embla handles drag click suppression naturally, but we force check)
    emblaApi.on("pointerUp", () => {
      // Embla internal click suppression is good, but we can prevent default if dragging happened
      // Actually, just standard click listeners on links work fine with Embla
    });

    horizontalLinks.forEach((link: any) => {
      link.addEventListener("click", (e: any) => {
        if (emblaApi.clickAllowed()) {
          closeMenu();
        } else {
          e.preventDefault();
        }
      });
    });

    // Escape key
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && isMenuOpen) closeMenu();
    });
  }

  initNavbar();
  document.addEventListener("astro:page-load", initNavbar);
</script>
