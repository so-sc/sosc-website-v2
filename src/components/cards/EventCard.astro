---
import { Image } from "astro:assets";

const { name, date, location, cover, link } = Astro.props;
const formattedDate = new Date(date).toLocaleDateString("en-US", {
  year: "numeric",
  month: "short",
  day: "numeric",
});
---

<a
  href={`/events/${link}`}
  class="group relative overflow-hidden rounded-lg cursor-pointer transition-transform duration-300 hover:scale-[1.02] block break-inside-avoid mb-4"
>
  <!-- Image with overlay -->
  <div class="relative">
    {
      cover && (
        <Image
          src={cover}
          alt={name}
          class="w-full h-auto object-contain bg-gray-100 rounded-t-lg"
          format="webp"
          loading="lazy"
          quality={80}
        />
      )
    }
    
    <!-- Dark gradient overlay at bottom for text visibility -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
  </div>

  <!-- Text overlay content -->
  <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
    <!-- Date and location -->
    <div class="flex items-center gap-2 text-sm mb-3">
      <span>{formattedDate}</span>
      {location && (
        <>
          <span>â€¢</span>
          <span>{location}</span>
        </>
      )}
    </div>

    <!-- Event name -->
    <h2 class="text-2xl font-bold leading-tight transition-colors group-hover:text-primary">
      {name}
    </h2>
  </div>
</a>
